{
    "name": "cv",
    "private": true,
    "scripts": {
        "build": "webpack --config webpack/webpack.config.js --mode=production",
        "build:dev": "webpack --config webpack/webpack.config.js --mode=development",
        "watch": "webpack --config webpack/webpack.config.js --mode=development --watch",
        "start": "node server.js",
        "lint": "npm run lint:format && npm run lint:js && npm run lint:css",
        "lint:format": "prettier --config config/.prettierrc --write . --ignore-path config/.prettierignore",
        "lint:js": "eslint --config config/eslint.config.mjs src --fix",
        "lint:css": "npx stylelint \"src/**/*.css\" --fix --config config/stylelint.config.cjs --ignore-path config/.stylelintignore"
    },
    "devDependencies": {
        "css-loader": "^6.10.0",
        "eslint": "^9.39.2",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-unicorn": "^62.0.0",
        "globals": "^15.11.0",
        "style-loader": "^4.0.0",
        "prettier": "^3.8.0",
        "prettier-plugin-css-order": "^2.2.0",
        "stylelint": "^17.0.0",
        "stylelint-config-standard": "^40.0.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.5",
        "typescript-eslint": "^8.53.1",
        "webpack": "^5.94.0",
        "webpack-cli": "^5.1.4"
    }
}
